<UserControl x:Class="Restaurant.Views.UserControls.TableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Restaurant.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">

    <Border BorderBrush="White" 
            BorderThickness="6" 
            CornerRadius="20" 
            Background="#402715">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Margin="20">
                
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding TableId, StringFormat={}Столик {0} }"/>
                    <TextBlock Text="{Binding TableLocation, StringFormat={} | {0}}"/>
                </StackPanel>
                <TextBlock Text="{Binding TableCapacity, StringFormat={}Вместимость: {0}}"/>
                <TextBlock x:Name="tableStatusTextBlock" Text="{Binding TableStatus}"/>

            </StackPanel>

            <Image Grid.Column="1" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   Margin="10"
                   Source="../../Resources/Images/restaurant_logo.png"/>
        </Grid>
    </Border>
</UserControl>
