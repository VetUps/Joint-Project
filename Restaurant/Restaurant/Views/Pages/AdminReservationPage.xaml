<Page x:Class="Restaurant.Views.Pages.AdminReservationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant.Views.Pages"
      mc:Ignorable="d" 
            d:DesignHeight="960" d:DesignWidth="1920"
      Title="OrdersAdminPage">

    <Grid Background="#402715">
        <ListView x:Name="reservationsListView" 
                  Style="{StaticResource TransparentListView}" 
                  ItemsSource="{Binding ReservationCardSource}"
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center" 
                  Height="700" Width="1550"
                  BorderBrush="#DF8C22"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
            
        </ListView>
    </Grid>
</Page>
