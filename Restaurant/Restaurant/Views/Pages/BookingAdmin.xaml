<Page x:Class="Restaurant.Views.Pages.BookingAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="964" d:DesignWidth="1920"
      Title="BookingAdmin">


    <Grid Background="#402715">
        <ListView x:Name="ReservationsListView" Style="{StaticResource TransparentListView}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="693" Width="1488">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding ReservationDetails}" VerticalAlignment="Center" Foreground="White" FontSize="20"/>

                        <ComboBox  Style="{StaticResource ComboBoxStyle}" x:Name="StatusComboBox" 
                                  Grid.Column="1"
                                  ItemsSource="{Binding StatusOptions}"
                                  SelectedItem="{Binding OrderStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectionChanged="StatusComboBox_SelectionChanged"
                                  VerticalAlignment="Center"
                                  Margin="10,0,0,0">
                        </ComboBox>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
