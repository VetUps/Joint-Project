<Page x:Class="Restaurant.Views.Pages.BookingAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookingAdmin">


    <Grid Background="#402715">
        <ListView x:Name="ReservationsListView" Style="{StaticResource TransparentListView}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="430" Width="780" Foreground="#FFDF8C22">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding ReservationDetails}" VerticalAlignment="Center" Foreground="White" FontSize="14"/>

                        <ComboBox  Style="{StaticResource ComboBoxStyle}" x:Name="StatusComboBox" 
                                  Grid.Column="1"
                                  ItemsSource="{Binding StatusOptions}"
                                  SelectedItem="{Binding OrderStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  SelectionChanged="StatusComboBox_SelectionChanged"
                                  VerticalAlignment="Center"
                                  Margin="10,0,0,0">
                            <!--<ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="#D2B48C"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>-->
                        </ComboBox>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
