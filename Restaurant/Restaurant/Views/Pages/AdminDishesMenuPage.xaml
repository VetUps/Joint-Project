<Page x:Class="Restaurant.Views.Pages.AdminDishesMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant.Views.Pages" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
            Title="Меню" Background="#402715">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="229*"/>
        </Grid.RowDefinitions>

        <Button x:Name="addDishButton" 
                Content="Добавить" 
                Style="{StaticResource ButtonStyle}" 
                FontSize="35.07px"
                HorizontalAlignment="Left"
                Margin="50,0,0,0"
                Click="addDishButton_Click"/>
        
        <ListBox x:Name="dishesListBox"
                 ItemsSource="{Binding DishCardSource}"
                 Grid.Row="1"
                 Margin="30"
                 Background="Transparent"
                 HorizontalAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 BorderThickness="0">

            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Name="EditBtn" 
                              Header="Редактировать"/>
                    
                    <MenuItem Name="RemoveBtn" 
                              Header="Удалить"/>
                </ContextMenu>
            </ListBox.ContextMenu>
            
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="10"/>
                    <!-- Отступ между элементами -->
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </Grid>
</Page>
